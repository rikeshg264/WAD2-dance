{{> header }}

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg p-4">
        <h2 class="text-center mb-3">Welcome, {{user.fullname}}!</h2>
        <p class="text-center text-muted">
          You are logged in as a 
          {{#isOrganiser}}<strong class="text-primary">Organiser</strong>{{/isOrganiser}}
          {{^isOrganiser}}<strong class="text-success">Regular User</strong>{{/isOrganiser}}.
        </p>

        <hr class="my-4">

        <div class="row text-center">
          {{#isOrganiser}}
            <div class="col-md-4 mb-3">
              <a href="/courses/add" class="btn btn-outline-primary w-100">➕ Add New Course</a>
            </div>
            <div class="col-md-4 mb-3">
              <a href="/courses" class="btn btn-outline-secondary w-100">📋 Manage Courses</a>
            </div>
            <div class="col-md-4 mb-3">
              <a href="/manage-users" class="btn btn-outline-dark w-100">👥 Manage Users</a>
            </div>
          {{/isOrganiser}}

          {{^isOrganiser}}
            <div class="col-md-6 mb-3">
              <a href="/courses" class="btn btn-outline-success w-100">💃 View Available Courses</a>
            </div>
            <div class="col-md-6 mb-3">
              <a href="/my-courses" class="btn btn-outline-info w-100">📖 My Courses</a>
            </div>
          {{/isOrganiser}}

          <div class="col-12 mt-4">
            <a href="/logout" class="btn btn-danger w-100">🚪 Logout</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{> footer }}
