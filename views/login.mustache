{{> header }}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh; background-color: #f8f9fa;">
  <div class="form-card p-4 bg-white shadow rounded" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Login</h2>
    
    <form action="/login" method="POST">
      <div class="mb-3">
        <input type="text" name="username" class="form-control" placeholder="Username" required>
      </div>
      
      <div class="mb-3">
        <input type="password" name="password" class="form-control" placeholder="Password" required>
      </div>
      
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>

      {{#error}}<p class="text-danger text-center mt-3">{{error}}</p>{{/error}}
    </form>

    <p class="mt-3 text-center">
      Don't have an account? <a href="/register">Register here</a>
    </p>
  </div>
</div>

{{> footer }}
