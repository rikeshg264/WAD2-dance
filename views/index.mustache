{{> header }}

<!-- Hero Section -->
<div class="container-fluid bg-dark text-light py-5">
  <div class="container text-center">
    <h1 class="display-4 fw-bold">Step into Rhythm with Step & Spin</h1>
    <p class="lead">Discover a vibrant community of dance, energy, and creativity for all ages and levels.</p>
    <a href="/explore-courses" class="btn btn-success btn-lg mt-3">Browse Courses</a>
  </div>
</div>

<!-- Featured Classes -->
<div class="container my-5">
  <h2 class="text-center mb-4 text-primary">Our Popular Dance Styles</h2>
  <div class="row g-4">

    <div class="col-md-4">
      <div class="card h-100 shadow">
        <img src="/salsa.jfif" class="card-img-top" alt="Salsa class">
        <div class="card-body">
          <h5 class="card-title">Salsa</h5>
          <p class="card-text">Feel the heat and passion of Latin dance. Perfect for couples and energetic movers.</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card h-100 shadow">
        <img src="/ballet.jfif" class="card-img-top" alt="Ballet class">
        <div class="card-body">
          <h5 class="card-title">Ballet</h5>
          <p class="card-text">Refine your technique and grace with classical ballet, from beginner to advanced levels.</p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card h-100 shadow">
        <img src="/hiphop.jfif" class="card-img-top" alt="Hip Hop class">
        <div class="card-body">
          <h5 class="card-title">Hip Hop</h5>
          <p class="card-text">Express yourself with freestyle and urban beats. High energy, high fun!</p>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- About Blurb -->
<div class="container my-5">
  <div class="row align-items-center">
    <div class="col-md-6 mb-4 mb-md-0">
      <img src="/about.avif" class="img-fluid rounded shadow" alt="Dance studio">
    </div>
    <div class="col-md-6">
      <h2>Why Choose Step & Spin?</h2>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">✅ Courses for all levels</li>
        <li class="list-group-item">✅ Friendly certified instructors</li>
        <li class="list-group-item">✅ Affordable and flexible sessions</li>
        <li class="list-group-item">✅ Great for fitness and fun</li>
      </ul>
      <a href="/about" class="btn btn-outline-primary mt-3">Learn More</a>
    </div>
  </div>
</div>

<!-- Call to Action -->
<div class="container text-center my-5">
  <h3 class="mb-3">Ready to dance?</h3>
  <a href="/register" class="btn btn-lg btn-success">Join Our Community</a>
</div>

